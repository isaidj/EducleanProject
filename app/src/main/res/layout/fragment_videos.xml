<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Videos"
    >

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/concert"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Videos"
                android:textColor="@color/grey"
                android:textSize="30dp"
                android:textStyle="bold" />




        <LinearLayout
            android:id="@+id/aguaPorDerecho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Agua por derecho"
                android:textColor="@color/grey"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/video1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_agua" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/cuidadoDelAgua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textViewCuidado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Cuidado del agua"
                android:textColor="@color/grey"
                android:textSize="30dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/video2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/gotas" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>